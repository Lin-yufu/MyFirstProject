<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/mine_swipe"
    tools:context=".Activity.Fragment.MineFragment">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mine_layout"
    android:visibility="gone"
    >



    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#dbd0e6"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mine_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/mine_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试" />

            <TextView
                android:id="@+id/mine_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试" />
        </LinearLayout>


        <Button
            android:id="@+id/my_article"
            android:text="我的文章"
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_button"
            />
        <Button
            android:id="@+id/edit_profile"
            android:text="编辑资料"
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_button"
            />
        <Button
            android:id="@+id/edit_password"
            android:text="修改密码"
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_button"
            />
        <Button
            android:id="@+id/about_author"
            android:text="关于开发者"
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_button"
            />
        <Button
            android:id="@+id/check_update"
            android:text="更新检查"
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_button"
            />

        <Button
            android:id="@+id/logout"
            android:text="退出登录"
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_button"
            />

    </LinearLayout>
    <ImageView
        android:layout_gravity="right|top"
        android:id="@+id/music"
        android:layout_margin="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/music_icon"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        </LinearLayout>




</FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>